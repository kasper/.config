{
  "name": "phoenix",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix"
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "15.0.0",
    "xo": "0.53.1"
  },
  "xo": {
    "extends": "eslint-config-airbnb-base",
    "prettier": true,
    "space": true,
    "globals": [
      "_",
      "Key",
      "Modal",
      "Phoenix",
      "Screen",
      "Task",
      "Window"
    ],
    "rules": {
      "unicorn/no-empty-file": "off",
      "unicorn/switch-case-braces": "off"
    }
  }
}
